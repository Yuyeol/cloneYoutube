        form(action=routes.join, method="post")
            input(type="text", name="name", placeholder="Full Name", reqired=true)
            input(type="email", name="email", placeholder="Email", reqired=true)
            input(type="password", name="password", placeholder="Password", reqired=true)
            input(type="password", name="password2", placeholder="Varify Password", reqired=true)
            input(type="submit", value="Join")
        include partials/socialLogin